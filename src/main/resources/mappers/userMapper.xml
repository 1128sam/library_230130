<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.library.user.dao.UserDAO">
	<insert id="insertUser" parameterType="map">
		INSERT INTO `user`
			(
				`userId`
				, `password`
				, `type`
				, `name`
				, `email`
				, `imageUrl`
				, `self_vertify_que`
				, `self_vertify_ans`
				, `createdAt`
				, `updatedAt`
			)
		VALUES
			(
				#{userId}
				, #{password}
				, 1
				, #{name}
				, #{email}
				, NULL
				, 1
				, 'test'
				, NOW()
				, NOW()
			)
	</insert>
	
	<select id="selectUserList" resultType="com.library.user.model.User">
		SELECT * FROM `user`
	</select>

	<select id="selectUserListByUserId" resultType="com.library.user.model.User">
		SELECT * FROM `user` WHERE `id` = #{userId}
	</select>

	<select id="userIdValid" resultType="int">
		SELECT COUNT(*) FROM `user`
			WHERE `userId` = #{userId}
	</select>
	
	<select id="selectUserByUserIdPassword" parameterType="map" resultType="com.library.user.model.User">
		SELECT
			`id`
			, `userId`
			, `password`
			, `type`
			, `name`
			, `email`
			, `imageUrl`
			, `self_vertify_que`
			, `self_vertify_ans`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`userId` = #{userId} AND `password` = #{password}
	</select>

	<select id="selectUserInfoById" parameterType="int" resultType="com.library.user.model.User">
		SELECT
			`id`
			, `userId`
			, `password`
			, `type`
			, `name`
			, `email`
			, `imageUrl`
			, `self_vertify_que`
			, `self_vertify_ans`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`id` = #{userId}
	</select>

	<update id="updateUserProfile" parameterType="map">
		UPDATE `user`
			SET `userId` = #{userId}
			, `password` = #{password}
			, `imageUrl` = #{fileAttach}
			, `imageUrl` = #{imagePath}
			, `self_vertify_que` = #{question}
			, `self_vertify_ans` = #{selfVerAns}
			, `updatedAt` = NOW()
		WHERE `id` = #{id}
	</update>

	<select id="selectUserByEmail" parameterType="String" resultType="com.library.user.model.User">
		SELECT
			`id`
			, `userId`
			, `password`
			, `type`
			, `name`
			, `email`
			, `imageUrl`
			, `self_vertify_que`
			, `self_vertify_ans`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`email` = #{email}
	</select>
	
	<select id="selectUserNameByUserId" parameterType="int" resultType="String">
		SELECT
			`userId`
		FROM
			`user`
		WHERE
			`id` = #{id}
	</select>
</mapper>